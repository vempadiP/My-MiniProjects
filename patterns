'''

i = 0
sum = 0
while i < 5:
    j = 0
    while j < 4:
        if (i == 0) or (i == 4):
            print("*", end="")
        elif ((i != 0) and (j == 1)) or ((i != 0) and (j ==2)):
            print(" ", end="")
        else:
            print("*", end="")
        j += 1
    print()
    i += 1
print()
